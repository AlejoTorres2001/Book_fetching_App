{{#if title }}
<div class="carta-book card w-50" style="width: 18rem;">
  <img
    src={{img}}
    class="card-img-top"
    alt="..."
  />
  <div class="card-body">
    <h5 class="card-title title">{{title}}</h5>
  </div>
  <ul class="list-group list-group-flush ">
    <li class="list-group-item subtitle">{{subtitle}}</li>
    <li class="list-group-item">Number of pages: {{number_of_pages}}</li>
    <li class="list-group-item">Average reading time: {{avg}}Hs</li>
    <li class="list-group-item">Publish date: {{publish_date}}</li>
  </ul>
</div>
{{else}}
{{#if errors}}
<h2 class="title">Whoops! Take another look at your code </h2>
{{else}}
<h2 class="title">Your search results will appear here</h2>
 {{/if}}
<div class="contenedor">
 <div class=" options">
        <a href="#" class="section2button btn btn-primary changecolor">Search a Book!</a>
      </div>
      <div class="options">
        <a href="/StoragedBooks" class="section2button btn btn-primary ">See Storaged Books</a>
      </div>
</div>
   

{{/if}}

